    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="50dp"
  android:orientation="horizontal"

    >

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="公司："
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_com"
        />


    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="編號："
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_No"
        />

</LinearLayout>
